---
import Base from "../../layouts/Base.astro";
import RegistryCard from "../../components/RegistryCard.astro";
import { getRegistries } from "../../lib/api";

const registries = getRegistries();
---

<Base title="Registries" description="AI agent skill registries and MCP server directories monitored by Aguara Watch.">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">Monitored Registries</h1>
    <p class="text-gray-400">
      Aguara Watch continuously scans {registries.length || 5} AI agent skills registries and MCP server directories.
    </p>
  </div>

  {registries.length > 0 ? (
    <div class="grid sm:grid-cols-2 gap-4">
      {registries.map((r) => (
        <RegistryCard
          id={r.id}
          name={r.name}
          url={r.url}
          description={r.description}
          skillCount={r.skill_count}
          avgScore={r.avg_score}
        />
      ))}
    </div>
  ) : (
    <div class="bg-gray-900/50 border border-gray-800 rounded-2xl p-12 text-center">
      <p class="text-gray-400">No registry data available yet. Run the pipeline to populate.</p>
    </div>
  )}
</Base>
