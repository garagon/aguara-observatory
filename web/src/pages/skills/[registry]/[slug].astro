---
import Base from "../../../layouts/Base.astro";
import ScoreGrade from "../../../components/ScoreGrade.astro";
import SeverityBadge from "../../../components/SeverityBadge.astro";
import FindingsTable from "../../../components/FindingsTable.astro";
import { listSkillReports, getSkillReport } from "../../../lib/api";
import { registryNames } from "../../../lib/constants";

export function getStaticPaths() {
  const reports = listSkillReports();
  return reports.map((r) => ({
    params: { registry: r.registry, slug: r.slug },
  }));
}

const { registry, slug } = Astro.params;
const report = getSkillReport(registry!, slug!);
const base = import.meta.env.BASE_URL;

function formatDate(iso?: string): string {
  if (!iso) return "\u2014";
  try {
    return new Date(iso).toLocaleDateString("en-US", {
      year: "numeric",
      month: "short",
      day: "numeric",
    });
  } catch {
    return iso;
  }
}

const regName = registryNames[registry!] ?? registry;

// Compute severity counts for summary
const sevCounts: Record<string, number> = {};
if (report) {
  report.findings.forEach((f: any) => {
    sevCounts[f.severity] = (sevCounts[f.severity] ?? 0) + 1;
  });
}
---

<Base title={report?.name ?? slug!} description={`Security scan report for ${report?.name ?? slug} from ${regName}.`}>
  <!-- Breadcrumb -->
  <nav class="mb-6 flex items-center gap-2 text-sm text-gray-500">
    <a href={`${base}registries/`} class="hover:text-aguara-400 transition-colors">Registries</a>
    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
    <a href={`${base}registries/${registry}/`} class="hover:text-aguara-400 transition-colors">{regName}</a>
    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
    <span class="text-gray-300 truncate max-w-[200px]">{report?.name || slug}</span>
  </nav>

  {report ? (
    <>
      <!-- Header -->
      <div class="flex items-start justify-between mb-8 gap-4">
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-white tracking-tight">{report.name || report.slug}</h1>
          <p class="text-sm text-gray-500 mt-1 font-mono truncate">{report.skill_id}</p>
          {report.description && (
            <p class="text-sm text-gray-400 mt-2">{report.description}</p>
          )}
          {report.url && (
            <a href={report.url} class="inline-flex items-center gap-1 text-sm text-aguara-400 hover:text-aguara-300 mt-2 transition-colors" target="_blank" rel="noopener noreferrer">
              View source
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" /></svg>
            </a>
          )}
        </div>
        <ScoreGrade grade={report.grade} score={report.score} size="lg" />
      </div>

      <!-- Meta cards -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 mb-8">
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-4">
          <p class="text-xs text-gray-500 mb-1">First Seen</p>
          <p class="text-sm text-gray-300 font-mono">{formatDate(report.first_seen)}</p>
        </div>
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-4">
          <p class="text-xs text-gray-500 mb-1">Last Scanned</p>
          <p class="text-sm text-gray-300 font-mono">{formatDate(report.last_seen)}</p>
        </div>
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-4">
          <p class="text-xs text-gray-500 mb-1">Findings</p>
          <p class="text-sm font-bold text-white">{report.findings.length}</p>
        </div>
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-4">
          <p class="text-xs text-gray-500 mb-1">Score</p>
          <p class="text-sm font-bold text-white">{report.score}/100</p>
        </div>
      </div>

      <!-- Severity summary -->
      {report.findings.length > 0 && (
        <div class="flex flex-wrap gap-3 mb-6">
          {["CRITICAL", "HIGH", "MEDIUM", "LOW"].map((sev) => {
            const count = sevCounts[sev];
            if (!count) return null;
            return (
              <div class="flex items-center gap-1.5">
                <SeverityBadge severity={sev} />
                <span class="text-sm font-mono text-gray-400">{count}</span>
              </div>
            );
          })}
        </div>
      )}

      <!-- Findings -->
      <div class="bg-gray-900/50 border border-gray-800 rounded-2xl p-5">
        <h2 class="text-base font-semibold text-white mb-4">
          Findings <span class="text-gray-500 font-normal">({report.findings.length})</span>
        </h2>
        <FindingsTable findings={report.findings} />
      </div>
    </>
  ) : (
    <div class="bg-gray-900/50 border border-gray-800 rounded-2xl p-12 text-center">
      <h1 class="text-2xl font-bold text-white mb-4">Skill Not Found</h1>
      <p class="text-gray-400">No report available for {registry}/{slug}.</p>
    </div>
  )}
</Base>
