---
import Base from "../../../layouts/Base.astro";
import ScoreGrade from "../../../components/ScoreGrade.astro";
import FindingsTable from "../../../components/FindingsTable.astro";
import { listSkillReports, getSkillReport } from "../../../lib/api";

export function getStaticPaths() {
  const reports = listSkillReports();
  return reports.map((r) => ({
    params: { registry: r.registry, slug: r.slug },
  }));
}

const { registry, slug } = Astro.params;
const report = getSkillReport(registry!, slug!);
const base = import.meta.env.BASE_URL;
---

<Base title={report?.name ?? slug!}>
  <div class="mb-8">
    <a href={`${base}registries/${registry}/`} class="text-sm text-gray-400 hover:text-aguara-400 transition-colors">
      &larr; Back to {registry}
    </a>
  </div>

  {report ? (
    <>
      <div class="flex items-start justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-white">{report.name || report.slug}</h1>
          <p class="text-sm text-gray-500 mt-1 font-mono">{report.skill_id}</p>
          {report.url && (
            <a href={report.url} class="text-sm text-aguara-400 hover:text-aguara-300 mt-1 inline-block" target="_blank" rel="noopener noreferrer">
              {report.url} &nearr;
            </a>
          )}
        </div>
        <ScoreGrade grade={report.grade} score={report.score} size="lg" />
      </div>

      <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-8">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-white">
            Findings ({report.findings.length})
          </h2>
        </div>
        <FindingsTable findings={report.findings} />
      </div>
    </>
  ) : (
    <div class="bg-gray-900 border border-gray-800 rounded-xl p-12 text-center">
      <h1 class="text-2xl font-bold text-white mb-4">Skill Not Found</h1>
      <p class="text-gray-400">No report available for {registry}/{slug}.</p>
    </div>
  )}
</Base>
