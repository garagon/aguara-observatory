---
import SeverityBadge from "./SeverityBadge.astro";

interface Finding {
  rule_id: string;
  severity: string;
  category: string;
  subcategory?: string;
  line?: number;
  matched_text?: string;
  message?: string;
}

interface Props {
  findings: Finding[];
  compact?: boolean;
}

const { findings, compact = false } = Astro.props;

const severityOrder: Record<string, number> = { CRITICAL: 0, HIGH: 1, MEDIUM: 2, LOW: 3, INFO: 4 };
const sorted = [...findings].sort(
  (a, b) => (severityOrder[a.severity] ?? 5) - (severityOrder[b.severity] ?? 5)
);
---

<div class="space-y-3">
  {sorted.map((f) => (
    <div class="border border-gray-800 rounded-lg overflow-hidden">
      <div class="flex items-center gap-3 px-4 py-3 bg-gray-800/30">
        <SeverityBadge severity={f.severity} />
        <span class="font-mono text-xs text-gray-300">{f.rule_id}</span>
        <span class="text-xs text-gray-500">{f.category}</span>
        {f.line && (
          <span class="text-xs text-gray-600 ml-auto">Line {f.line}</span>
        )}
      </div>
      {!compact && f.matched_text && (
        <div class="px-4 py-3 bg-gray-950/50 border-t border-gray-800/50">
          <pre class="text-xs text-gray-400 font-mono whitespace-pre-wrap break-all overflow-x-auto"><code>{f.matched_text}</code></pre>
        </div>
      )}
      {!compact && f.message && (
        <div class="px-4 py-2 border-t border-gray-800/50">
          <p class="text-xs text-gray-500">{f.message}</p>
        </div>
      )}
    </div>
  ))}
</div>

{findings.length === 0 && (
  <p class="text-gray-500 text-center py-8">No findings.</p>
)}
