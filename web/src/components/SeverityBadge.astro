---
import { severityColors } from "../lib/constants";

interface Props {
  severity: string;
  count?: number;
}

const { severity, count } = Astro.props;

const colorClass = severityColors[severity.toUpperCase()] ?? severityColors.INFO;
---

<span class={`inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium rounded-full border ${colorClass}`}>
  {severity.toUpperCase()}
  {count !== undefined && <span class="font-bold">{count}</span>}
</span>
