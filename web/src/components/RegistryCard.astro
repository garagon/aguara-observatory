---
import ScoreGrade from "./ScoreGrade.astro";
import { scoreToGrade } from "../lib/constants";

interface Props {
  id: string;
  name: string;
  url: string;
  description: string;
  skillCount: number;
  avgScore: number;
}

const { id, name, url, description, skillCount, avgScore } = Astro.props;
const base = import.meta.env.BASE_URL;
const grade = scoreToGrade(avgScore);

const registryIcons: Record<string, string> = {
  "skills-sh": "S",
  clawhub: "C",
  "mcp-registry": "P",
  "mcp-so": "M",
  lobehub: "L",
};
---

<a
  href={`${base}registries/${id}/`}
  class="block bg-gray-900/50 border border-gray-800 rounded-2xl p-5 hover:border-aguara-500/40 hover:bg-gray-800/30 hover:-translate-y-0.5 transition-all duration-200 group"
>
  <div class="flex items-start gap-4">
    <div class="w-10 h-10 rounded-xl bg-gray-800 border border-gray-700 flex items-center justify-center text-sm font-bold text-gray-300 shrink-0 group-hover:border-aguara-500/40 group-hover:text-aguara-400 transition-colors">
      {registryIcons[id] ?? id[0]?.toUpperCase()}
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between gap-2">
        <h3 class="text-base font-semibold text-white group-hover:text-aguara-400 transition-colors">
          {name}
        </h3>
        <ScoreGrade grade={grade} size="sm" />
      </div>
      <p class="text-sm text-gray-500 mt-0.5 line-clamp-1">{description}</p>
      <div class="flex items-center gap-4 mt-3 text-xs text-gray-500">
        <span class="font-mono">{skillCount.toLocaleString()} skills</span>
        <span class="font-mono">{Math.round(avgScore)}/100</span>
      </div>
    </div>
  </div>
</a>
